// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Venue {
  id        Int     @id @default(autoincrement())
}

model User {
  Id        Int     @id @default(autoincrement())
  Email     String  @unique
  Username  String
  Password  String
  FirstName String
  LastName  String
  Country   String
  is_deleted Boolean @default(false)
}

model League {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  country   String
  code      String
  season    String
  team      Int?
  type      String
  current   Boolean
  search    String
  last      Int?
  is_deleted Boolean @default(false)
}

model Team {
  id        Int      @id
  name      String   @unique
  country   String
  code      String
  national Boolean
  founded Int
  logo String
  is_deleted Boolean @default(false)
  venueId   Int
}


model Player {
  id        Int     @id @default(autoincrement())
  team      Int
  league    Int
  season    String
  search    String
  page      Int   @default(1)
  is_deleted Boolean @default(false)
}

model FollowLeague {
  Id        Int     @id @default(autoincrement())
  UserId    Int
  LeagueId  Int
  is_deleted Boolean @default(false)
}

model FollowTeam {
  Id        Int     @id @default(autoincrement())
  UserId    Int
  TeamId    Int
  is_deleted Boolean @default(false)
}

model FollowPlayer {
  Id        Int     @id @default(autoincrement())
  UserId    Int
  PlayerId  Int
  is_deleted Boolean @default(false)
}

model Prediction {
  id         Int      @id @default(autoincrement())
  matchId    Int
  userId     Int
  homeScore  Int
  awayScore  Int
  createdAt  DateTime @default(now())
}
